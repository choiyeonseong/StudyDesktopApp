<Window x:Class="SnakeBiteGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeBiteGame"
        mc:Ignorable="d"
        Title="SnakeBite" Height="450" Width="800">
    <Grid>
        <Image Stretch="Fill" Source="main.png"/>
        <TextBlock Text="Snake Bite Game" 
                   FontSize="50" FontWeight="ExtraBold" Foreground="Yellow"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="BtnPlay" Click="BtnPlay_Click"
                Content="Play" Width="150" Height="40"  FontSize="20" Margin="196,306,446,73"/>
        <Button x:Name="BtnExit" Click="BtnExit_Click"
                Content="Exit" Width="150" Height="40"  FontSize="20" Margin="450,306,192,73"/>
    </Grid>
</Window>
